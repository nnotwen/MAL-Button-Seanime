{
  "id": "mal-button",
  "name": "MAL Button",
  "version": "1.1.8",
  "manifestURI": "https://raw.githubusercontent.com/bruuhim/MAL-Button-Seanime/refs/heads/main/src/manifest.json",
  "language": "typescript",
  "type": "plugin",
  "description": "Quick access MyAnimeList links directly from Seanime anime details page",
  "author": "bruuhim",
  "icon": "https://raw.githubusercontent.com/bruuhim/MAL-Button-Seanime/refs/heads/main/src/icon.png",
  "website": "https://github.com/bruuhim/MAL-Button-Seanime",
  "lang": "en",
  "payloadURI": "https://raw.githubusercontent.com/bruuhim/MAL-Button-Seanime/refs/heads/main/src/MAL.ts",
  "plugin": {
    "version": "1",
    "permissions": [
      "system"
    ],
    "systemAllowList": {
      "commandScopes": [
        {
          "command": "cmd",
          "args": [
            {
              "value": "/c"
            },
            {
              "value": "start"
            },
            {
              "validator": "^https?://.*$"
            }
          ]
        },
        {
          "command": "open",
          "args": [
            {
              "validator": "^https?://.*$"
            }
          ]
        },
        {
          "command": "xdg-open",
          "args": [
            {
              "validator": "^https?://.*$"
            }
          ]
        }
      ]
    }
  },
  "isDevelopment": true
}